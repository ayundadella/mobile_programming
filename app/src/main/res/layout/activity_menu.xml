<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@drawable/bgms3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:text="MENU"
        android:background="#008080"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="#80008080"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="Identitas Masjid"
        android:fontFamily="@font/abhaya_libre_extrabold"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="#80008080"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="Jadwal Sholat"
        android:fontFamily="@font/abhaya_libre_extrabold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center">
    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="#80008080"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="Marquee"
        android:fontFamily="@font/abhaya_libre_extrabold"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="#80008080"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="Pengumuman"
        android:fontFamily="@font/abhaya_libre_extrabold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="#80FF8C00"
        android:gravity="center">

    <Button
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="#80008080"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="Slideshow"
        android:fontFamily="@font/abhaya_libre_extrabold"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="#80008080"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:text="Tagline"
        android:fontFamily="@font/abhaya_libre_extrabold"/>
    </LinearLayout>

</LinearLayout>